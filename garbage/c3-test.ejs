<% modules.push("d3.v3"); %>
<% modules.push("c3"); %>
<% title = "c3.js test" %>

<h1><%=title%></h1>
<h2>Using columns</h2>
<div id="chart1"></div>

<h2>Using rows</h2>
<div id="chart2"></div>

<script>
    var chart1 = c3.generate({
        bindto: '#chart1',
        data: {
            columns: [
                ['data1', 30, 200, 100, 400, 150, 250],
                ['data2', 50, 20, 10, 40, 15, 25]
            ]
        }
    });
    var chart2 = c3.generate({
        bindto: '#chart2',
        data: {
            rows: [
                ['data1', 'data2'],
                [30, 50],
                [200, 20],
                [100, 10],
                [400, 40],
                [150, 15],
                [250, 25],
            ]
        }
    });
</script>