
<% title = "c3.js test" %>
<% dependsOn( ["d3.v3", "c3"]); %>

<h1><%=title%></h1>
<h2>Using columns</h2>
<div id="chart1"></div>

<h2>Using rows</h2>
<div id="chart2"></div>

<h2>Using JSON</h2>
<div id="chart3"></div>


<div id="chart4"></div>

<script>
    var chart1 = c3.generate({
        bindto: '#chart1',
        data: {
            columns: [
                ['data1', 30, 200, 100, 400, 150, 250],
                ['data2', 50, 20, 10, 40, 15, 25]
            ]
        }
    });
    var chart2 = c3.generate({
        bindto: '#chart2',
        data: {
            rows: [
                ['data1', 'data2'],
                [30, 50],
                [200, 20],
                [100, 10],
                [400, 40],
                [150, 15],
                [250, 25]
            ]
        }
    });

    var chart3 = c3.generate({
        bindto: '#chart3',
        data: {
            json: {
                data1: [30, 200, 100, 400, 150, 250],
                data2: [50, 20, 10, 40, 15, 25],
                dates: ['2013-01-05', '2013-01-10','2013-01-15','2013-01-20','2013-01-25','2013-01-30']
            },
            x: 'dates',
        },
        axis: {
            x: {
                type: 'timeseries',
//                tick: {
//                    values: ['2013-01-05', '2013-01-10','2013-01-15','2013-01-20','2013-01-25','2013-01-30']
//                }
            }
        }
    });
    
    var chart4 = c3.generate({
        bindto: '#chart4',
        data: {
            json: [
                { id: 1, name: 'abc', visits: 200 },
                { id: 2, name: 'efg', visits: 400 },
                { id: 3, name: 'pqr', visits: 150 },
                { id: 4, name: 'xyz', visits: 420 },
            ],
            keys: {
                x: 'name',
                value: ['visits'],
            },
        },
        axis: {
            x: {
                type: 'categorized'
            }
        }
    });
</script>