<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="author" content="Hitoshi Wada">
    <% if(description){ %><meta name="description" content="<%= description %>"><% } %>
    <% if(keywords){    %><meta name="Keywords" content="<%= keywords %>"><%        } %>
    <% if(image){       %><meta property="og:image" content="<%= image %>"/><%     } %>

    <title><%= title %> | Hitokun's</title>

    <% modules.push("jquery"); %>
    <% modules.push("semantic-ui"); %>

    <% modules.filter(function(item, pos) {return modules.indexOf(item) == pos;}).forEach(function(v){ %>
        <%- partial("modules/_" + v) %>
    <% }) %>

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <!--<script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>-->
    <!--<script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>-->
    <![endif]-->
    <script src="js/google-tracking.js"></script>

    <link href="css/responsive-helper.css" rel="stylesheet">
    <style>
        body{
            padding-top: 10px;
        }
        .h-40{
            height:40px;
        }
    </style>
</head>
<body>
<%
    var page;
    if(title.indexOf("About") > -1){
        page = "about";
    }else if(title.indexOf("Contact") > -1){
        page = "contact";
    }else{
        page = "home"
    }
 %>
<div class="ui top container">
    <div class="ui tabular menu h-40">
        <div class="left menu">
            <a class="item"><h1>Hitokun's</h1></a>
            <div class="large screen only">
                <span class="ui left pointing big label" style="margin-top:21px;">
                    My.status = (I as Programmer).canHelp(You) ? HAPPY : SAD;
                </span>
            </div>
        </div>
        <div class="right menu">
            <a href="/index.html" class="item <% if(page == 'home'){%>active<%}%>">
                Home
            </a>
            <a href="/about.html" class="item <% if(page == 'about'){%>active<%}%>">
                About
            </a>
            <a href="/contact.html" class="item <% if(page == 'contact'){%>active<%}%>">
                Contact
            </a>
        </div>
    </div>
</div>
<br>
<div class="ui container">
    <%- yield %>
</div>
</body>
</html>