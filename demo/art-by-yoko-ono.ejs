    <script src="/js/d3-operatable.js"></script>

<h1><%=title%></h1>

<div id="view">
    <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink"
         viewBox="0 0 600 600" width="500" height="500">
        <text x="100" y="300" font-family="impact" font-size="100" fill="none" stroke="blue" stroke-width="3">Hello</text>
        <text x="200" y="380" font-family="impact" font-size="100" fill="blue" stroke="blue">World!</text>
